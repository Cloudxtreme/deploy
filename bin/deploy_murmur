#!/bin/sh

# READY

######################################################################
# Script version is yymmdd-HHMMSS in UTC, date -u +%y%m%d-%H%M%S
######################################################################
SCRIPTVERSION=150610-052203

pkg install -y audio/murmur

sysrc murmur_enable="YES"

service murmur start

echo
JAILIP=``netconn | grep -v ADDRESS | awk '{print $6}' | awk -F: '{print $1}' | sort -u``
echo Connect Mumble clients to ${JAILIP}:64738
