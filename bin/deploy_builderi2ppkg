#!/bin/sh

# READY

. /usr/local/bin/loadmyvars.sh

. /usr/local/bin/_deploy_include.sh

pkg remove -a -y
fres

psnap

# unattended build
export BATCH=yes


if [ ! -e ${I2PPKG} ]; then
    PORTNAME="security/i2p"
    for i in \
        math/gmp \
        java/openjdk7 \
        devel/apache-ant \
        devel/gettext-tools \
        archivers/unzip \
        devel/gettext-runtime \
    ; do
        pkg install -y $i
    done
    #converters/libiconv
    build_it_now ${PORTNAME}
fi
