#!/bin/sh

name=${1}
newcfg=${2}
oldcfg=${3}
FQDN=${4}
path=$( ioc-pathof ${name} )/usr/local/etc/nginx/sites-enabled/${newcfg}

if [ ! -e ${path} ]; then
    cat ~/git/deploy/usr/local/etc/nginx/sites-available/${oldcfg} \
        | sed "s/localhost.localdomain/${FQDN}/" \
        >${path}
fi
chmod 644 $path
