#!/bin/sh

if [ "x" = "x$1" ]; then
    echo "Usage: ${0##*/} old_jail_tag"
    exit 1
fi

#DRYRUN="-n"
RSYNC="rsync $DRYRUN -vialP"

OLDFOLDER=$( ioc-pathof $1 )

NEWFOLDER=$( ioc-pathof nginx )

$RSYNC --exclude ssl.crt --exclude ssl.key --exclude ssl.csr \
        ${OLDFOLDER}/usr/local/etc/nginx/ssl/               ${NEWFOLDER}/usr/local/etc/nginx/ssl/
$RSYNC  ${OLDFOLDER}/usr/local/etc/nginx/ssl/ssl.crt        ${NEWFOLDER}/usr/local/etc/nginx/ssl/ssl.crt.old
$RSYNC  ${OLDFOLDER}/usr/local/etc/nginx/ssl/ssl.csr        ${NEWFOLDER}/usr/local/etc/nginx/ssl/ssl.csr.old
$RSYNC  ${OLDFOLDER}/usr/local/etc/nginx/ssl/ssl.key        ${NEWFOLDER}/usr/local/etc/nginx/ssl/ssl.key.old
$RSYNC  ${OLDFOLDER}/usr/local/etc/nginx/sites-enabled/     ${NEWFOLDER}/usr/local/etc/nginx/sites-enabled/

# optional
$RSYNC  ${OLDFOLDER}/usr/local/www/                ${NEWFOLDER}/usr/local/www/
