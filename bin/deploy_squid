#!/bin/sh

# READY

######################################################################
# Script version is yymmdd-HHMMSS in UTC, date -u +%y%m%d-%H%M%S
######################################################################
SCRIPTVERSION=150623-080345

if ! sysrc squid_enable | grep YES >/dev/null ; then
    NEWINSTALL="YES"
fi

if [ "xYES" == "x${NEWINSTALL}" ]; then
    if [ -e /var/ports/packages/All/squid-3.5.5.txz ]; then
        pkg add -f /var/ports/packages/All/squid-3.5.5.txz
    else
        # install squid and dependencies
        pkg install -y www/squid
        # remove squid because we want custom options
        # openssl from ports conflicts https://lists.freebsd.org/pipermail/freebsd-questions/2015-June/266245.html
        pkg remove -y www/squid openssl
        # use portsnap
        psnap

        # we want LAX_HTTP=on
        if [ ! -e /usr/ports/www/squid/Makefile.orig ]; then
            cp /usr/ports/www/squid/Makefile /usr/ports/www/squid/Makefile.orig
        fi
        cat /usr/ports/www/squid/Makefile.orig | sed 's;OPTIONS_DEFAULT=;OPTIONS_DEFAULT=LAX_HTTP SSL SSL_CRTD ;' >/usr/ports/www/squid/Makefile

        cd /usr/ports/www/squid
        make && make install && make package && make clean
        # /var/ports/packages/All/squid-3.5.5.txz
    fi

    if ! which squid ; then
        echo "Failed to build squid."
        exit 1
    fi
fi

# Thanks to @tomster via https://github.com/freebsd/pkg/issues/1181
cat >/usr/local/etc/squid/squid.conf <<EOF
acl localnet src 10.0.0.0/8     # RFC1918 possible internal network
acl localnet src 172.16.0.0/12  # RFC1918 possible internal network
acl localnet src 192.168.0.0/16 # RFC1918 possible internal network
acl localnet src fc00::/7       # RFC 4193 local private network range
acl localnet src fe80::/10      # RFC 4291 link-local (directly plugged) machines
acl localsquid src 10.7.7.1

acl SSL_ports port 443
acl Safe_ports port 80      # http
acl Safe_ports port 21      # ftp
acl Safe_ports port 443     # https
acl Safe_ports port 70      # gopher
acl Safe_ports port 210     # wais
acl Safe_ports port 1025-65535  # unregistered ports
acl Safe_ports port 280     # http-mgmt
acl Safe_ports port 488     # gss-http
acl Safe_ports port 591     # filemaker
acl Safe_ports port 777     # multiling http
acl CONNECT method CONNECT
acl PURGE method PURGE

http_access deny !Safe_ports

http_access deny CONNECT !SSL_ports

http_access allow PURGE localhost
http_access allow PURGE localsquid
http_access allow PURGE localnet
http_access deny PURGE

http_access allow localhost manager
http_access deny manager

http_access allow localnet
http_access allow localhost

http_access deny all

http_port 3128 ssl-bump generate-host-certificates=on dynamic_cert_mem_cache_size=4MB key=/usr/local/etc/squid/private.pem cert=/usr/local/etc/squid/public.pem
always_direct allow all
ssl_bump server-first all
ssl_bump peek all
ssl_bump bump all
sslcrtd_program /usr/local/libexec/squid/ssl_crtd -s /var/squid/ssl_db -M 4MB
sslcrtd_children 3

##### Unsafe
# sslproxy_cert_error allow all
# sslproxy_flags DONT_VERIFY_PEER

cache_dir ufs /var/squid/cache 100000 16 256
coredump_dir /var/squid/logs

##### Rubygems?
# match against download urls for specific gems - 28800 = 20 days
refresh_pattern -i \/.*(\.gem) 1440 100% 28800 ignore-private ignore-must-revalidate override-expire ignore-no-cache

##### FreeBSD pkgng
# match against download urls for specific packages - their content never changes for the same url, so we cache aggressively for 525600 = 1 year
refresh_pattern -i (quarterly|latest)\/All\/.*(\.txz) 1440 100% 525600 ignore-private ignore-must-revalidate override-expire ignore-no-cache
# match against meta-information - this shouldn't be cached quite so aggressively 28800 = 20 days
refresh_pattern -i (quarterly|latest)\/.*(\.txz) 1440 100% 28800 ignore-private ignore-must-revalidate override-expire ignore-no-cache

refresh_pattern ^ftp:       1440    20% 525600
refresh_pattern ^gopher:    1440    0%  1440
refresh_pattern -i (/cgi-bin/|\?) 0 0%  0
refresh_pattern .       0   20% 4320

maximum_object_size_in_memory 32 KB
maximum_object_size 2000 MB

visible_hostname squid
EOF

if [ ! -e /usr/local/etc/squid/public.pem ]; then
    yes '' | openssl req -new -newkey rsa:2048 -sha256 -days 365 -nodes -x509 -keyout /usr/local/etc/squid/private.pem -out /usr/local/etc/squid/public.pem
fi
chown squid:squid /usr/local/etc/squid/*.pem
chmod 644 /usr/local/etc/squid/public.pem
chmod 600 /usr/local/etc/squid/private.pem

if [ ! -e /var/squid/ssl_db ]; then
    /usr/local/libexec/squid/ssl_crtd -c -s /var/squid/ssl_db -M 4MB
fi
chown squid:squid /var/squid/ssl_db

sysrc squid_enable="YES"

if [ "xYES" == "x${NEWINSTALL}" ]; then
    squid -z

    service squid start
fi

echo
JAILIP=`ifconfig | grep inet | awk '{print $2}'`
echo "Squid is setup, eza-unlink-basejail will setup PKG_ENV to 10.7.7.1:3128"
