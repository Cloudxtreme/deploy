#!/bin/sh

# READY

. /usr/local/bin/loadmyvars.sh

. /usr/local/bin/_deploy_include.sh

pkg remove -a -y
fres

psnap

# unattended build
export BATCH=yes


if [ ! -e ${KEEPASSX2PKG} ]; then
    PORTNAME="security/keepassx2"
    ## install dependencies
    for i in \
        ${PORTNAME} \
        textproc/py-sphinx \
        libSM \
        xproto \
        libICE \
        libXt \
        libX11 \
        libXdmcp \
        libxcb \
        libxml2 \
        libpthread-stubs \
        libXau \
        kbproto \
        libXtst \
        recordproto \
        inputproto \
        libXext \
        xextproto \
        libXi \
        libXfixes \
        fixesproto \
        gtk-update-icon-cache \
        hicolor-icon-theme \
        libXdamage \
        damageproto \
        pango \
        encodings \
        font-util \
        libXft \
        libXrender \
        renderproto \
        fontconfig \
        expat \
        freetype2 \
        xorg-fonts-truetype \
        font-misc-meltho \
        mkfontdir \
        mkfontscale \
        libfontenc \
        font-bh-ttf \
        font-misc-ethiopic \
        dejavu \
        harfbuzz \
        cairo \
        libGL \
        dri2proto \
        libdevq \
        libXxf86vm \
        xf86vidmodeproto \
        libdrm \
        libpciaccess \
        pciids \
        libxshmfence \
        libglapi \
        libXvMC \
        libXv \
        videoproto \
        glproto \
        libEGL \
        gbm \
        llvm37 \
        python27 \
        libffi \
        indexinfo \
        gettext-runtime \
        perl5 \
        libedit \
        png \
        pixman \
        xcb-util-renderutil \
        xcb-util \
        glib \
        libiconv \
        pcre \
        libXinerama \
        xineramaproto \
        libXmu \
        icu \
        graphite2 \
        libXcursor \
        libXcomposite \
        compositeproto \
        atk \
        libXrandr \
        randrproto \
        gdk-pixbuf2 \
        jasper \
        jpeg-turbo \
        tiff \
        jbigkit \
        shared-mime-info \
        qt4-corelib \
        libgcrypt \
        libgpg-error \
        desktop-file-utils \
        qt4-linguisttools \
        qt4-xml \
        qt4-testlib \
        qt4-gui \
        xdg-utils \
        xset \
        libXfontcache \
        fontcacheproto \
        xprop \
        cups \
        avahi-app \
        gnome_subr \
        dbus-glib \
        dbus \
        gobject-introspection \
        python2 \
        gdbm \
        libdaemon \
        gnutls \
        nettle \
        gmp \
        ca_root_nss \
        libtasn1 \
        p11-kit \
        trousers-tddl \
        libidn \
        libpaper \
        devel/scons \
        devel/jsoncpp \
        cmake \
    ; do
        pkg install -y $i
    done
    ## remove
    pkg remove -y \
        ${PORTNAME}
    build_it_now ${PORTNAME}
    if ! which keepassx ; then
        echo "Failed to build."
        exit 1
    fi
fi
