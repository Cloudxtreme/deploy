#!/bin/sh

# READY

. /usr/local/bin/loadmyvars.sh

. /usr/local/bin/_deploy_include.sh

psnap

# unattended build
export BATCH=yes


git clone --depth 1 https://github.com/johnko/freebsd-ports-ampache.git /root/ports
rsync -virthP /root/ports/audio/ampache/ /usr/ports/audio/ampache/

PORTNAME="audio/ampache"
pkg install -y \
    dialog4ports \
    gettext-tools \
    php56 \
    php56-mysql \
    php56-session \
    php56-iconv \
    php56-hash \
    php56-gettext \
    php56-mbstring \
    php56-filter \
    php56-xml \
    php56-pdo \
    php56-pdo_mysql \
    php-composer \
    git
build_it_now ${PORTNAME}
