#!/bin/sh

# READY

######################################################################
# Script version is yymmdd-HHMMSS in UTC, date -u +%y%m%d-%H%M%S
######################################################################
SCRIPTVERSION=150713-064606

LAMEPKG=/var/ports/packages/All/lame-3.99.5_2.txz
LIBAACPLUSPKG=/var/ports/packages/All/ffmpeg-2.0.2_7.txz
FFMPEGPKG=/var/ports/packages/All/ffmpeg-2.7.1_1,1.txz

if [ -e ${LAMEPKG} ]; then
    pkg add -f ${LAMEPKG}
else
    PORTNAME="audio/lame"
    # install dependencies
    pkg install -y devel/gmake converters/libiconv
    # use portsnap, but portsnap doesn't like non-interactive so we need a human to help
    psnap

    cd /usr/ports/${PORTNAME}
    make && make install && make package && make clean
    # /var/ports/packages/All/lame-3.99.5_2.txz
fi


if [ -e ${LIBAACPLUSPKG} ]; then
    pkg add -f ${LIBAACPLUSPKG}
else
    PORTNAME="audio/libaacplus"
    # install dependencies
    pkg install -y devel/autoconf devel/automake devel/libtool \
        devel/pkgconf
    # use portsnap, but portsnap doesn't like non-interactive so we need a human to help
    psnap

    cd /usr/ports/${PORTNAME}
    make && make install && make package && make clean
    # see /var/ports/packages/All/
fi


if [ -e ${FFMPEGPKG} ]; then
    pkg add -f ${FFMPEGPKG}
else
    PORTNAME="multimedia/ffmpeg"
    # install dependencies
    pkg install -y devel/yasm devel/binutils graphics/frei0r devel/gmake \
        devel/pkgconf textproc/texi2html lang/perl5.20 \
        multimedia/libass \
        sysutils/libcdio-paranoia multimedia/libbluray \
        multimedia/librtmp
    # use portsnap, but portsnap doesn't like non-interactive so we need a human to help
    psnap

    # we want custom options
    if [ ! -e /usr/ports/${PORTNAME}/Makefile.orig ]; then
        cp /usr/ports/${PORTNAME}/Makefile /usr/ports/${PORTNAME}/Makefile.orig
    fi
    cat /usr/ports/${PORTNAME}/Makefile.orig | sed 's;OPTIONS_DEFAULT=;OPTIONS_DEFAULT= AACPLUS LAME ASS CDIO LIBBLURAY RTMP ;' >/usr/ports/${PORTNAME}/Makefile

    # remove old config
    if [ -e /var/db/ports/multimedia_ffmpeg/options ]; then
        rm /var/db/ports/multimedia_ffmpeg/options
    fi

    cd /usr/ports/${PORTNAME}
    make && make install && make package && make clean
    # see /var/ports/packages/All/
fi

if ! which ffmpeg ; then
    echo "Failed to build."
    exit 1
fi
