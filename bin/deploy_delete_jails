#!/bin/sh

# READY

######################################################################
# Script version is yymmdd-HHMMSS in UTC, date -u +%y%m%d-%H%M%S
######################################################################
SCRIPTVERSION=150621-233833

GOOD="
squid
nginx
couch
dtfc
owncloud
ejabberd
murmur
vnc
gitlab
"

BAD="
baikal
couchdtfc
horde
"

DEV="
echoplexus
gitannex
gogs
phabricator
pydio
"

JAILNAMES="${GOOD} ${BAD} ${DEV}"

eza stop

for i in ${JAILNAMES} ; do
    if [ "xsquid" != "x${i}" ]; then
        if zfs list -H tank/ezjail/${i} 2>/dev/null ; then
            eza delete ${i}
            zfs destroy -fr tank/ezjail/${i}
        fi
    fi
done
